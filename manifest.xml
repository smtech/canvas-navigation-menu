<?xml version="1.0"?>
<canvashack>
	<name>Global Navigation Menus</name>
	<id>global-navigation-menus</id>
	<abstract>Add additional menus to the global navigation in Canvas</abstract>
	<authors>
		<author>
			<name>Seth Battis</name>
			<email>SethBattis@stmarksschool.org</email>
		</author>
	</authors>
	<components>
		<javascript>navigation-menu.js.php</javascript>
		<css>navbar.css</css>
		<canvas>
			<pages>
				<include>
					<page>
						<type>regex</type>
						<pattern>/.*/</pattern>
					</page>
				</include>
			</pages>
			<dom>
				<bundle>
					<event>load</event>
					<action>loadMenus()</action>
					<selector>#menu</selector>
				</bundle>
			</dom>
		</canvas>
	</components>
</canvashack>
